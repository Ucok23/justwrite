<div class="card form-card">
  <div class="card-header">
    <h1><%= book.new_record? ? "New Book" : "Edit Book" %></h1>
  </div>
  <div class="card-body">
    <%= form_with(model: book) do |form| %>
      <div class="form-group">
        <%= form.label :title, class: "form-label" do %>
          <%= icon("book-open") %> Title
        <% end %>
        <%= form.text_field :title, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :author, class: "form-label" do %>
          <%= icon("user") %> Author
        <% end %>
        <%= form.text_field :author, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :description, class: "form-label" do %>
          <%= icon("document-text") %> Description
        <% end %>
        <%= form.text_area :description, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :cover_image, class: "form-label" do %>
          <%= icon("photo") %> Cover Image
        <% end %>
        <%= form.file_field :cover_image, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.check_box :published %>
        <%= form.label :published, class: "form-label" do %>
          <%= icon("check-circle") %> Published
        <% end %>
      </div>

      <div class="form-actions">
        <%= form.submit class: "btn btn-primary" do %>
          <span>
            <%= icon(book.new_record? ? "plus-circle" : "pencil-square") %>
            <%= book.new_record? ? "Create Book" : "Update Book" %>
          </span>
        <% end %>

        <%= link_to books_path, class: "btn btn-secondary" do %>
          <span>
            <%= icon("x-mark") %>
            Cancel
          </span>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="card-footer">
    <%= link_to books_path, class: "btn btn-ghost" do %>
      <span>
        <%= icon("arrow-left") %>
        Back to Books
      </span>
    <% end %>
  </div>
</div>

