<%= form_with(model: book) do |form| %>
  <div class="form-group">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :author, class: "form-label" %>
    <%= form.text_field :author, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :cover_image_url, class: "form-label" %>
    <%= form.text_field :cover_image_url, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.check_box :published %>
    <%= form.label :published, "Published" %>
  </div>

  <div class="form-actions">
    <%= render 'shared/button', text: (book.new_record? ? "Create Book" : "Update Book") %>
    <%= render 'shared/button', text: "Cancel", path: books_path, variant: 'secondary' %>
  </div>
<% end %>

