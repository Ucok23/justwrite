<div class="page-header">
  <h1>My Books</h1>
  <% if current_user&.admin? %>
    <%= render 'shared/button', text: 'New Book', path: new_book_path, variant: 'primary' %>
  <% end %>
</div>

<div class="books-grid">
  <% @books.each do |book| %>
    <%= link_to book, class: "card book-card" do %>
      <h2><%= book.title %></h2>
      <p>by <%= book.author %></p>
      <p><%= truncate(book.description, length: 100) %></p>
      <p><%= pluralize(book.chapters.count, "chapter") %></p>
      <% if current_user&.admin? %>
        <p>Status: <%= book.published? ? "Published" : "Draft" %></p>
      <% end %>
    <% end %>
  <% end %>
</div>

