<div class="page-header">
  <h1>My Books</h1>
  <%= render 'shared/button', text: 'New Book', path: new_book_path, variant: 'primary' %>
</div>

<div class="books-grid">
  <% @books.each do |book| %>
    <%= link_to book, class: "card book-card" do %>
      <h2><%= book.title %></h2>
      <p><%= pluralize(book.chapters.count, "chapter") %></p>
    <% end %>
  <% end %>
</div>

