<div class="reading-container">
  <div class="reading-header">
    <div class="reading-header-start">
      <%= link_to 'Back to book', @book, class: 'back-link' %>
    </div>
    <div class="reading-header-end">
      <% if current_user&.admin? %>
        <div class="admin-actions">
          <%= link_to 'Edit', edit_book_chapter_path(@book, @chapter), class: 'btn btn-secondary' %>
          <%= button_to 'Delete', [@book, @chapter], method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="reading-content">
    <h1><%= @chapter.title %></h1>
    <div class="chapter-meta">
      <span><%= @chapter.status %></span>
      <span>&bull;</span>
      <span><%= @chapter.word_count %> words</span>
    </div>
    <div class="chapter-body">
      <%= markdown(@chapter.content) %>
    </div>
  </div>
</div>

