<div class="page-header">
  <h1><%= @chapter.title %></h1>
  <% if current_user&.admin? %>
    <div>
      <%= link_to 'Edit Chapter', edit_book_chapter_path(@book, @chapter), class: 'btn btn-secondary' %>
      <%= button_to 'Delete Chapter', [@book, @chapter], method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
    </div>
  <% end %>
</div>

<div class="chapter-details">
  <p><strong>Status:</strong> <%= @chapter.status %></p>
  <p><strong>Word Count:</strong> <%= @chapter.word_count %></p>
</div>

<div class="chapter-content">
  <%= markdown(@chapter.content) %>
</div>

<p><%= link_to 'Back to book', @book %></p>
